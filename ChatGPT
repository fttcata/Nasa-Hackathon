<body>
  <div id="sidebar">
    <h2>WeatherWary.Earth</h2>
    <label for="placeSearch">Search Location</label>
    <input id="placeSearch" type="text" placeholder="Search address, city, or lat,lng" />
    <button id="locateMe">Use My Location</button>

    <label for="fromDate">Date Range</label>
    <div style="display:flex;gap:6px">
      <input id="fromDate" type="date" />
      <input id="toDate" type="date" />
    </div>

    <label for="activitySearch">Select Activity</label>
    <select id="activitySearch">
      <option value="">-- Choose an activity --</option>
      <option value="hiking">Hiking</option>
      <option value="sailing">Sailing</option>
      <option value="running">Running</option>
      <option value="fishing">Fishing</option>
      <option value="cycling">Cycling</option>
      <option value="skiing">Skiing</option>
    </select>

    <button id="applyFilters">Apply Filters</button>
    <button id="exportQuery" style="background:transparent;border:1px solid #46b3ff;color:#46b3ff;margin-left:8px">Export JSON</button>
  </div>

  <div id="map"></div>

  <script>
    const state = { marker: null, latLng: null, filters: { fromDate: null, toDate: null, activity: null } };

    function initMap() {
      const map = new google.maps.Map(document.getElementById('map'), {
        center: { lat: 20, lng: 0 },
        zoom: 2,
        streetViewControl: false,
      });

      map.addListener('click', (e) => placeMarker(e.latLng, map));

      const input = document.getElementById('placeSearch');
      const autocomplete = new google.maps.places.Autocomplete(input);
      autocomplete.bindTo('bounds', map);
      autocomplete.addListener('place_changed', () => {
        const place = autocomplete.getPlace();
        if (!place.geometry) {
          alert('Selected place has no geometry');
          return;
        }
        map.panTo(place.geometry.location);
        map.setZoom(6);
        placeMarker(place.geometry.location, map, place.formatted_address || place.name);
      });

      document.getElementById('locateMe').addEventListener('click', () => {
        if (!navigator.geolocation) {
          alert('Geolocation not supported');
          return;
        }
        navigator.geolocation.getCurrentPosition(pos => {
          const p = { lat: pos.coords.latitude, lng: pos.coords.longitude };
          map.panTo(p);
          map.setZoom(6);
          placeMarker(p, map, 'My location');
        }, err => alert('Unable to get location: ' + err.message));
      });

      document.getElementById('applyFilters').addEventListener('click', () => {
        state.filters.fromDate = document.getElementById('fromDate').value || null;
        state.filters.toDate = document.getElementById('toDate').value || null;
        state.filters.activity = document.getElementById('activitySearch').value || null;
        console.log('Applied filters', state);
      });

      document.getElementById('exportQuery').addEventListener('click', () => {
        const blob = new Blob([JSON.stringify(buildQuery(), null, 2)], { type: 'application/json' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'weather_query.json';
        a.click();
        URL.revokeObjectURL(url);
      });

      function placeMarker(latLng, map, label) {
        if (state.marker) state.marker.setMap(null);
        state.marker = new google.maps.Marker({ position: latLng, map: map });
        state.latLng = { lat: latLng.lat?.() ?? latLng.lat, lng: latLng.lng?.() ?? latLng.lng };
      }

      function buildQuery() {
        return { location: state.latLng, timeWindow: { from: state.filters.fromDate, to: state.filters.toDate }, activity: state.filters.activity, createdAt: new Date().toISOString() };
      }
    }
  </script>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDkk5aRWm5Yr_X9GhJIjljLgVL9jXlZ_0k&libraries=places&callback=initMap"></script>
</body>
